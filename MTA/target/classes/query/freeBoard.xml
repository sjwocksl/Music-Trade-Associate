		<update id="freeboardUpdate" parameterType="board">
			update free_board 
			set f_title = #{f_title} ,
			 f_text = #{f_text},
			 f_regdate = sysdate,
			f_file	= #{f_file}
			  where f_no = #{f_no}
		</update> 
